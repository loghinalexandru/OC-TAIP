<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:orientation="vertical" >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/profile_picture"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="0"
        app:civ_shadow_color="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/borderbottom"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_username_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textSize="20dp"
            android:gravity="left"
            android:text="Username" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"

            android:gravity="right"
            android:text="TBD" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/borderbottom"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/profile_email_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:layout_weight="0.2"
            android:gravity="left"/>

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/borderbottom"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/profile_token_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Token"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView
            android:id="@+id/profile_token"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/borderbottom"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/profile_token_expiration_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Token Expiration"
            android:textSize="20dp"
            android:layout_weight="0.7"
            android:gravity="left"/>

        <TextView
            android:id="@+id/profile_token_expiration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/borderbottom"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/profile_steps_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textSize="20dp"
            android:layout_weight="0.2"
            android:gravity="left"/>

        <TextView
            android:id="@+id/profile_steps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>

    <Button
        android:id="@+id/profile_picture_button"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Profile Picture" />

</LinearLayout>